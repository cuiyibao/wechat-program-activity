<!-- index.wxml -->
<view class="container flex-wrp">
  <form class="form">
    <view class="form-item">
      <view class="form-el">活动类型:</view>
      <view class="form-rl">
        <input type="text"></input>
      </view>
    </view>
    <view class="form-item">
      <view class="form-el">活动内容:</view>
      <view class="form-rl">
        <input type="text"></input>
      </view>
    </view>
    <view class="form-item">
      <view class="form-el">人数限制:</view>
      <view class="form-rl">
        <label class="checkbox">
          <checkbox value="no" />不限制
        </label>
      </view>
    </view>
    <view class="form-item">
      <view class="form-el">开始时间:</view>
      <view class="form-rl">
        <input type="text"></input>
      </view>
    </view>
    <view class="form-item">
      <view class="form-el">结束时间:</view>
      <view class="form-rl">
        <input type="text"></input>
      </view>
    </view>
    <view class="form-item">
      <view class="form-el">发起人:</view>
      <view class="form-rl">
        <radio-group>
          <label class="radio">
            <radio value="in" />参与
          </label>
          <label class="radio">
            <radio value="notIn" />不参与
          </label>
        </radio-group>
      </view>
    </view>
     <view class="form-submit">
      <view class="form-el">
        <button formType="submit">发起</button>
      </view>
      <view class="form-rl">
         <button formType="reset">取消</button>
      </view>
    </view>
  </form>
</view>